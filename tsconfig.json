{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"pretty": true,
		"removeComments": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"outDir": "build"
	},
    "include": [
        "source/*"
    ],
	"exclude": [
		"node_modules"
	]
}